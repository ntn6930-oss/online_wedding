rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null && request.auth.uid != null;
    }
    match /users/{uid}/cards/{cardId}/images/{fileName} {
      allow read: if true; // public CDN read
      allow write: if isSignedIn() && uid == request.auth.uid;
      allow delete: if isSignedIn() && uid == request.auth.uid;
    }
  }
}

